<%- include("partials/header-retrain") -%> <% if (message[0].SubService != null)
{ %>

<table
  style="margin: 10px 0px 0px 10px; margin-right: 0px"
  class="table table-striped table-hover table-bordered"
>
  <tr>
    <th>Request ID</th>
    <th>Service Type</th>
    <th>Sub Service</th>
    <th>Request</th>
    <th>Decision</th>
    <th>Flag</th>
    <th>Edit</th>
  </tr>
  <% for( let i = 0; i < message.length; i++ ) { %>
  <tr>
    <td><%= message[i].RequestID %></td>
    <td><%= message[i].Service %></td>
    <td><%= message[i].SubService %></td>
    <td><%= message[i].Request.substring(0, 15) + "..." %></td>
    <td></td>
    <td>Urgent</td>
    <td>
      <button
        type="button"
        class="btn btn-primary"
        data-toggle="modal"
        data-target="#<%= message[i].RequestID %>"
      >
        Edit Data
      </button>
    </td>
  </tr>
  <form method="post">
    <div
      class="modal fade"
      id="<%= message[i].RequestID %>"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLongTitle"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title blue-text" id="exampleModalLongTitle">
              Edit the request
            </h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <p>
              <span class="font-bold blue-text">Request ID:</span>
              <input
                style="border: none"
                type="text"
                id="requestID"
                name="requestID"
                value="<%= message[i].RequestID %>"
                readonly
              />
            </p>
            <p>
              <span class="font-bold blue-text">Service Type:</span> <%=
              message[i].Service %>
            </p>
            <p>
              <span class="font-bold blue-text">Service Sub Type:</span> <%=
              message[i].SubService %>
            </p>
            <p class="dark-text">
              <span class="font-bold blue-text">Request Text:</span> <%=
              message[i].Request %>
            </p>
            <p>
              <span class="font-bold blue-text">Detected Emotion: </span><%=
              message[i].Decision %>
            </p>
            <p>
              <span class="font-bold blue-text"
                >Select the Correct Emotion:
              </span>
              <select class="custom-select mr-sm-2" id="changeEmotion">
                <option value="Hate">Hate</option>
                <option value="Anger">Anger</option>
                <option value="Sadness">Sadness</option>
                <option value="Worry">Worry</option>
                <option value="Boredom">Boredom</option>
                <option value="Neutral">Neutral</option>
                <option value="Surprise">Surprise</option>
                <option value="Empty">Empty</option>
                <option value="Love">Love</option>
                <option value="Fun">Fun</option>
                <option value="Happiness">Happiness</option>
                <option value="Relief">Relief</option>
                <option value="Enthusiasm">Enthusiasm</option>
              </select>
            </p>
            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                name="urgent"
                id="urgent"
                value="Urgent"
                checked
              />
              <label class="blue-text font-bold" for="urgent"> Urgent </label>
            </div>

            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                name="nonUrgent"
                id="nonUrgent"
                value="Not Urgent"
              />
              <label class="blue-text font-bold" for="nonUrgent">
                Not Urgent
              </label>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-red" data-dismiss="modal">
              Close
            </button>
            <button type="submit" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>
  </form>
  <% } %>
</table>

