<%- include("partials/header-logged-in") -%> <% if (message[0].SubService !=
null) { %>
<table
  style="margin: 10px 0px 0px 10px; margin-right: 0px"
  class="table table-striped table-hover table-bordered"
>
  <tr>
    <th>Request ID</th>
    <th>Service Type</th>
    <th>Sub Service</th>
    <th>Request</th>
    <th>Decision</th>
    <th>Flag</th>
    <th>Edit</th>
  </tr>
  <% for( let i = 0; i < message.length; i++ ) { %>
  <tr>
    <td><%= message[i].RequestID %></td>
    <td><%= message[i].Service %></td>
    <td><%= message[i].SubService %></td>
    <td><%= message[i].Request.substring(0, 15) + "..." %></td>
    <td></td>
    <td>Urgent</td>
    <td>
      <button
        type="button"
        class="btn btn-primary"
        data-toggle="modal"
        data-target="#<%= message[i].RequestID %>"
      >
        Edit Data
      </button>
    </td>
  </tr>
  <div
    class="modal fade"
    id="<%= message[i].RequestID %>"
    tabindex="-1"
    role="dialog"
    aria-labelledby="exampleModalLongTitle"
    aria-hidden="true"
  >
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title blue-text" id="exampleModalLongTitle">
            Edit the request
          </h5>
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p class="dark-text">Request Text: <%= message[i].Request %></p>
          <p class="font-bold blue-text">
            The decision:
            <input
              class="col-4 dark-text"
              type="text"
              name="decision"
              contenteditable="true"
              id="decision"
              style="border: none"
              value="<%= message[i].Decision %>"
            />
          </p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Close
          </button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>
  <% } %>
</table>
<% } else { %>
<table style="margin: 5px" class="table table-striped">
  <tr>
    <th>Request ID</th>
    <th>Service Type</th>
    <th>Request</th>
    <th>Decision</th>
  </tr>
  <% for( let i = 0; i < message.length; i++ ) { %>
  <tr>
    <td><%= message[i].RequestID %></td>
    <td><%= message[i].Service %></td>
    <td><%= message[i].Request.substring(0, 15) + "..." %></td>
    <td><%= message[i].Decision %></td>
  </tr>
  <% } %>
</table>
<% } %> <%- include("partials/footer") -%>
